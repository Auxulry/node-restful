{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@domain/(.*)": "<rootDir>/../src/domain/$1",
    "@common/(.*)": "<rootDir>/../src/common/$1",
    "@exceptions/(.*)": "<rootDir>/../src/exceptions/$1"

  }
}
